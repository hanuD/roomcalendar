<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_gravity="center"
              android:keepScreenOn="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="250dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:keepScreenOn="true"
                    android:background="#800000">
        <TextView
                android:layout_width="1006dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Bangalore"
                android:textSize="10sp"
                android:gravity="center|bottom"
                android:layout_alignParentRight="true" android:id="@+id/textView"
                android:layout_alignParentBottom="false"/>
        <TextView
                android:layout_width="1006dp"
                android:layout_height="30dp"
                android:text="Majestic"
                android:textSize="25sp"
                android:gravity="center"
                android:height="10dp"
                android:layout_below="@+id/textView" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:autoText="false"
                android:text="Android Meeting Room App Discussion"
                android:layout_marginBottom="105dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="17sp"
                android:layout_alignParentBottom="true"
                android:autoText="false"
                android:text="10:00 - 12:00"
                android:layout_marginBottom="80dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:autoText="false"
                android:text="Senthil Raja Ramamoorthy" android:layout_marginBottom="40dp" android:textStyle="bold"
                android:layout_marginLeft="60dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:autoText="false"
                android:text="+6 Others"
                android:layout_alignParentTop="false"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="60dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textSize="8sp"
                android:layout_alignParentBottom="true"
                android:autoText="false"
                android:text="ThoughtWorks" android:gravity="right|top" android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="10:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="11:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="12:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="13:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="14:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="15:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="16:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="17:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:text="18:00"
                      android:gravity="bottom"
                      android:paddingLeft="100dp"
                      android:drawableBottom="#999999"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:layout_height="75dp"
                      android:layout_marginLeft="150dp"
                      android:layout_marginTop="75dp"
                      android:text="Some other event happening in this time"
                    android:textColor="#FFFFFF"
                    android:background="#800000"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>